<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/header') %>
    <title>Viewing Blog Post</title>
  </head>
  <body>
    <%-include('./partials/navbar') %>

    <main class="container mt-4">
      <h1><%=blog.title%></h1>
      <img
        src="<%=blog.coverImageURL%>"
        style="width: 400px; aspect-ratio: 16/9"
        alt=""
      />
      <div class="">
        <h5>Created By</h5>

        <img src="<%= blog.createdBy.profileImageURL%>" width="50" alt="" />
        <h6><%=blog.createdBy.fullName%></h6>
      </div>
      <br /><br />
      <p><%=blog.body%></p>
    </main>
    <div class="container">
      <h3>Comments</h3>
      <%if(locals.user){%>
      <form action="/blog/comment/<%=blog._id%>" method="post">
        <div class="form-group">
          <input
            type="text"
            name="content"
            id="content"
            class="form-control"
            placeholder="Share Your Thoughts..."
          />
          <button type="submit" class="btn btn-sm btn-primary">Comment</button>
        </div>
      </form>
      <%}else{%>
      <a href="/user/signin" class="text-primary">Sign In To Comment</a>
      <%}%>
      <br />
      <h3>Recent Comments</h3>
      <%comments.forEach(comment=>{%>
      <p><%=comment.content%></p>
      <h6>By: <%=comment.createdBy.fullName%></h6>
      <%})%>
    </div>
  </body>
</html>
